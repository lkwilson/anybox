# This is sourced by install and diff
# It creates a bash array containing all files in skel

skel_files=()
load_dir() {
  base="$1"
  for i in "$base"/.* "$base"/*; do
    if [ "${i: -2}" == '/.' ] || [ "${i: -3}" == '/..' ]; then
      continue
    fi
    if [ -d "$i" ]; then
      load_dir "$i"
    elif [ -f "$i" ]; then
      skel_files+=("${i: 2}")
    fi
  done
}

cd skel
load_dir .
cd ..
